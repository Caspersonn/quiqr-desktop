{
  "homepage": "./",
  "name": "hokus-cms",
  "author": "Juliano Appel Klein",
  "description": "A simple UI for Hugo.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "7zip-bin": "3.1.0",
    "electron-is-dev": "0.3.0",
    "electron-unhandled": "1.1.0",
    "fs-extra":"5.0.0",
    "glob":"7.1.2",
    "jimp":"0.2.28",
    "joi": "13.4.0",
    "js-yaml":"3.12.0",
    "mkdirp":"0.5.1",
    "opn":"5.2.0",
    "osenv":"0.1.4",
    "request": "2.87.0",
    "s3":"4.4.0",
    "toml":"2.3.3",
    "tomlify-j0.4":"3.0.0"
  },
  "devDependencies": {
	"ace-editor-builds": "1.2.4",
    "cross-env": "5.1.3",
    "concurrently": "3.5.1",
    "electron": "2.0.3",
    "electron-builder": "20.15.1",
    "electron-devtools-installer": "2.2.4",
    "material-ui": "0.20.0",
    "markdown-it": "8.4.1",
    "react": "16.4.1",    
    "react-dom": "16.4.1",
    "react-router-dom": "4.3.1",
    "react-scripts": "1.1.4",
    "copyfiles": "1.2.0",
    "mocha": "5.0.2",
    "chai": "4.1.2",
    "flow-bin": "0.75.0",
    "flow-typed": "2.4.0"
  },
  "main": "src-main/electron.js",
  "scripts": {
    "_copy-electron-code": "copyfiles -u 1 ./src-main/**/*.* ./build/electron/",
    "_copy-ace": "copyfiles -u 3 ./node_modules/ace-editor-builds/src-min-noconflict/**/*.* ./public/ace-editor-min-noconflict/",
    "_copy_ace_extras": "copyfiles -u 2 ./extras/ace-editor/**/*.* ./public/ace-editor-min-noconflict/",
    "_react-build": "react-scripts build",
    "_react-dev": "cross-env APP_ENV=development cross-env BROWSER=none cross-env PORT=4000 cross-env react-scripts start",
    "_electron-dev": "cross-env APP_ENV=development cross-env REACT_DEV_URL=http://localhost:4000 cross-env  electron .",
    "_electron-dist": "npm run _copy-electron-code && electron-builder",
    "_flow-kill": "taskkill /F /IM flow.exe",
    "dev": "npm run _copy-ace && concurrently --kill-others \"npm run _react-dev\" \"npm run _electron-dev\"",
    "dist": "npm run _copy-ace && rimraf dist && rimraf build && npm run _react-build && npm run _electron-dist",
    "test": "./node_modules/.bin/mocha",
    "flow-restart": "concurrently \"taskkill /F /IM flow.exe\" \"flow\""
  },
  "build": {
    "appId": "julianoaklein.hokus",
    "directories": {
      "buildResources": "public"
    },
    "win":{
      "icon":"public/icon"
    }
  }
}
