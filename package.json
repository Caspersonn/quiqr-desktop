{
  "homepage": "./",
  "name": "poppygo",
  "author": {
    "name": "Pim Snel, Brecht Swanenberg",
    "email": "info@poppygo.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poppygo/poppygo-electron-app.git"
  },
  "description": "The PoppyGo Hugo Publishing App",
  "version": "0.9.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "7zip-bin": "3.1.0",
    "adm-zip": "0.4.13",
    "await-spawn": "4.0.1",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "electron-context-menu": "^0.10.1",
    "electron-is-dev": "^1.1.0",
    "electron-progressbar": "^1.2.0",
    "electron-prompt": "^1.5.1",
    "electron-root-path": "^1.0.16",
    "electron-unhandled": "^1.1.0",
    "electron-window-state": "^5.0.3",
    "front-matter": "^4.0.2",
    "fs-extra": "5.0.0",
    "ftp-deploy": "2.3.6",
    "glob": "7.1.2",
    "jimp": "0.2.28",
    "joi": "13.4.0",
    "js-yaml": "3.12.0",
    "material-ui-02": "npm:material-ui@^0.20.2",
    "mkdirp": "0.5.1",
    "request": "2.87.0",
    "rimraf": "^3.0.2",
    "s3": "4.4.0",
    "toml": "2.3.3",
    "tomlify-j0.4": "3.0.0",
    "user-home": "2.0.0"
  },
  "devDependencies": {
    "ajv": "6.5.4",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "copyfiles": "2.1.0",
    "cross-env": "5.1.3",
    "dotenv": "^8.2.0",
    "electron": "5.0.13",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^0.2.1",
    "license-checker": "^25.0.1",
    "markdown-it": "8.4.1",
    "mocha": "^5.0.2",
    "node-abi": "^2.8.0",
    "node-pre-gyp": "0.11.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.8",
    "spectron": "^7.0.0"
  },
  "peerDependencies": {},
  "main": "src-main/electron.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha",
    "clean": "rimraf dist && rimraf build",
    "_electron-dev": "cross-env APP_ENV=development cross-env REACT_DEV_URL=http://localhost:4000 electron .",
    "_react-dev": "cross-env APP_ENV=development BROWSERSLIST_IGNORE_OLD_DATA=true BROWSER=none PORT=4000 react-scripts start",
    "_react-build": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=true react-scripts build",
    "_copy-electron-code": "copyfiles -u 1 \"./src-main/**/*\" \"./build/electron/\"",
    "_pack_embgit": "node scripts/embgit-sh-runner.js",
    "_build_info": "node scripts/build_info.js",
    "_mac-notarize": "node scripts/notarize.js",
    "build": "npm run clean && npm run _react-build && npm run _copy-electron-code && npm run _pack_embgit && npm run _build_info",
    "dist": "npm run build && electron-builder",
    "start": "concurrently --kill-others \"npm run _react-dev\" \"npm run _electron-dev\""
  },
  "build": {
    "appId": "io.poppygo.poppygo-desktop",
    "artifactName": "poppygo_${os}_${arch}.${ext}",
    "productName": "PoppyGo",
    "directories": {
      "buildResources": "public"
    },
    "publish": [
      {
        "provider": "github"
      },
      {
        "provider": "s3",
        "bucket": "poppygo-app-releases",
        "region": "eu-west-1"
      }
    ],
    "protocols": [
      {
        "name": "poppygo",
        "role": "Editor",
        "schemes": [
          "poppygo"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "resources/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/all",
        "to": "all",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsisWeb": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "unicode": true,
      "installerIcon": "public/icon.ico",
      "differentialPackage": true
    },
    "mac": {
      "icon": "public/icon",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "icon": "public/icon",
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "category": "office"
    },
    "fileAssociations": [
      {
        "ext": "pogosite",
        "name": "PoppyGo Site File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogopass",
        "name": "PoppyGo Passport File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogocontent",
        "name": "PoppyGo Content File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogotheme",
        "name": "PoppyGo Theme File",
        "role": "Editor",
        "icon": "public/iconfile"
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
