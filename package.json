{
  "homepage": "./",
  "name": "poppygo",
  "author": {
    "name": "Pim Snel",
    "email": "pim@lingewoud.nl"
  },
  "description": "A Hugo Publishing App.",
  "version": "0.4.5",
  "private": true,
  "dependencies": {
    "7zip-bin": "3.1.0",
    "adm-zip": "0.4.13",
    "electron-context-menu": "^0.10.1",
    "electron-is-dev": "^1.1.0",
    "electron-progressbar": "^1.2.0",
    "electron-prompt": "^1.5.1",
    "electron-root-path": "^1.0.16",
    "electron-unhandled": "^1.1.0",
    "electron-window-state": "^5.0.3",
    "fs-extra": "5.0.0",
    "await-spawn": "3.0.0",
    "ftp-deploy": "2.3.6",
    "glob": "7.1.2",
    "jimp": "0.2.28",
    "joi": "13.4.0",
    "js-yaml": "3.12.0",
    "mkdirp": "0.5.1",
    "request": "2.87.0",
    "rimraf": "^3.0.2",
    "s3": "4.4.0",
    "toml": "2.3.3",
    "tomlify-j0.4": "3.0.0",
    "user-home": "2.0.0"
  },
  "devDependencies": {
    "ace-editor-builds": "1.2.4",
    "ajv": "6.5.4",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "copyfiles": "2.1.0",
    "cross-env": "5.1.3",
    "dotenv": "^8.2.0",
    "electron": "5.0.13",
    "electron-builder": "^22.4.1",
    "electron-notarize": "^0.2.1",
    "flow-bin": "0.75.0",
    "flow-typed": "2.4.0",
    "markdown-it": "8.4.1",
    "material-ui": "0.20.0",
    "mocha": "5.0.2",
    "node-abi": "2.5.0",
    "node-pre-gyp": "0.11.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.8"
  },
  "peerDependencies": {},
  "main": "src-main/electron.js",
  "scripts": {
    "start": "npm run _copy-ace && concurrently --kill-others \"npm run _react-dev\" \"npm run _electron-dev\"",
    "_copy-electron-code": "copyfiles -u 1 -V \"./src-main/**/*\" \"./build/electron/\"",
    "_copy-ace": "copyfiles -u 3 -V \"./node_modules/ace-editor-builds/src-min-noconflict/**/*.*\" \"./public/ace-editor-min-noconflict/\"",
    "_copy_ace_extras": "copyfiles -u 2 -V \"./extras/ace-editor/**/*.*\" \"./public/ace-editor-min-noconflict/\"",
    "_react-build": "cross-env CI=false react-scripts build",
    "_react-dev": "cross-env APP_ENV=development cross-env BROWSER=none cross-env PORT=4000 cross-env react-scripts start",
    "_electron-dev": "cross-env APP_ENV=development cross-env REACT_DEV_URL=http://localhost:4000 cross-env  electron .",
    "_rebuild-native": "cross-env VisualStudioVersion=15.0 npm install --build-from-source",
    "_electron-dist-win": "npm run _copy-electron-code && electron-builder",
    "_electron-dist-linux-deb": "npm run _copy-electron-code && electron-builder --linux deb",
    "_electron-dist-linux": "npm run _copy-electron-code && electron-builder",
    "_electron-dist-linux-all": "npm run _electron-dist-linux && electron-builder --linux deb",
    "_electron-dist-mac": "npm run _copy-electron-code && electron-builder",
    "_flow-kill": "taskkill /F /IM flow.exe",
    "_flow": "flow",
    "dist-win": "npm run _copy-ace && rimraf dist && rimraf build && npm run _react-build && npm run _electron-dist-win",
    "dist-linux": "npm run _copy-ace && rimraf dist && rimraf build && npm run _react-build && npm run _electron-dist-linux-all",
    "dist-mac": "npm run _copy-ace && rimraf dist && rimraf build && npm run _react-build && npm run _electron-dist-mac",
    "dist-mac-notarize": "node scripts/notarize.js",
    "test": "./node_modules/.bin/mocha",
    "flow-restart": "concurrently \"taskkill /F /IM flow.exe\" \"flow\""
  },
  "build": {
    "appId": "com.lingewoud.poppygo",
    "artifactName": "poppygo_${os}_${arch}.${ext}",
    "productName": "PoppyGo",
    "directories": {
      "buildResources": "public"
    },
    "protocols": [{
      "name": "poppygo",
      "role": "Editor",
      "schemes": ["poppygo"]
    }],
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "public/icon"
    },
    "mac": {
      "icon": "public/icon",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "fileAssociations": [
      {
        "ext": "pogosite",
        "name": "PoppyGo Site File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogopass",
        "name": "PoppyGo Passport File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogocontent",
        "name": "PoppyGo Content File",
        "role": "Editor",
        "icon": "public/iconfile"
      },
      {
        "ext": "pogotheme",
        "name": "PoppyGo Theme File",
        "role": "Editor",
        "icon": "public/iconfile"
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
