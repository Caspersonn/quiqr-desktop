{
  "homepage": "./",
  "name": "hokus-cms",
  "author": "Juliano Appel Klein",
  "description": "A simple UI for Hugo.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "7zip-bin": "3.1.0",
    "electron-is-dev": "0.3.0",
    "electron-unhandled": "1.1.0",
    "fs-extra":"5.0.0",
    "glob":"7.1.2",
    "jimp":"0.2.28",
    "joi": "13.1.2",
    "js-yaml":"3.11.0",
    "mkdirp":"0.5.1",
    "opn":"5.2.0",
    "osenv":"0.1.4",
    "request": "2.83.0",   
    "s3":"4.4.0",
    "toml":"2.3.3",
    "tomlify-j0.4":"3.0.0"
  },
  "devDependencies": {
    "cross-env": "5.1.3",
    "concurrently": "3.5.1",
    "electron": "1.8.6",
    "electron-builder": "20.10.0",
    "electron-react-devtools": "0.5.2",
    "material-ui": "0.20.0",
    "markdown-it": "8.4.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-router-dom": "4.2.2",
    "monaco-editor": "0.13.1",
    "react-scripts": "1.1.1",
    "copyfiles": "1.2.0",
    "mocha": "5.0.2",
    "chai": "4.1.2",
    "flow-bin": "0.71.0",
    "flow-typed": "2.4.0"
  },
  "main": "src-main/electron.js",
  "scripts": {
    "_copy-electron": "copyfiles -u 1 ./extras/electron.js ./build/ && copyfiles -u 1 ./src-main/**/*.* ./build/electron/",
    "_react-build": "react-scripts build",
    "_react-dev": "cross-env APP_ENV=development cross-env BROWSER=none cross-env PORT=4000 cross-env react-scripts start",
    "_electron-dev": "cross-env APP_ENV=development cross-env REACT_DEV_URL=http://localhost:4000 cross-env  electron .",
    "_electron-dist": "npm run _copy-electron && electron-builder",
    "dev": "concurrently --kill-others \"npm run _react-dev\" \"npm run _electron-dev\"",
    "dist": "npm run _react-build && npm run _electron-dist",
    "test": "./node_modules/.bin/mocha",
    "flow": "flow",
    "flow-kill": "taskkill /F /IM flow.exe"
  },
  "build": {
    "appId": "julianoaklein.hokus",
    "directories": {
      "buildResources": "public"
    },
    "win":{
      "icon":"public/icon"
    }
  }
}
